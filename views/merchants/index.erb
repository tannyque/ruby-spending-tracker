<h1>Merchants</h1>

<form class="center big-button" action="/merchants/new" method="get">
  <button type="submit" name="button">Add a new merchant</button>
</form>

<div class="merchant-index">
  <% @merchants.each do |merchant| %>
    <div class="merchant-box">
      <a href="/merchants/<%= merchant.id %>"><img src="<%= merchant.image %>" alt=""></a>
    </div>
  <% end %>
</div>
